<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage">


    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:background="@color/colorAccent" />
    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="355dp" />

    <TextView
        android:id="@+id/titleMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:text="Explore Movies"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvvv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="45dp"
        android:text="New movies are waiting for you"
        android:textStyle="italic"
        android:textColor="#fff"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleMedium" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#898888"
        android:textStyle="italic"
        android:layout_below="@id/tvvv"
        android:layout_marginTop="30dp"
        android:paddingLeft="20dp"
        android:text="Trending Movies"
        />




    <ScrollView
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_above="@id/main_nav">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="360dp">


            <LinearLayout
                android:id="@+id/movie"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="10dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/booksnew"
                android:elevation="15dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent">


                <ImageView
                    android:id="@+id/image"
                    android:layout_width="150dp"
                    android:layout_height="110dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="20dp"
                    android:scaleType="fitXY" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/tvname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="20dp"
                        android:text="Uri : The surgical strike"
                        android:textColor="#2E3691"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tvloc"
                        android:layout_width="230dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="8dp"
                        android:lineSpacingExtra="4dp"
                        android:text="Inox : Dadar"
                        android:textColor="@color/orange"
                        android:textStyle="italic"
                        android:textSize="13sp" />
                    <TextView
                        android:id="@+id/tvtime"
                        android:layout_width="230dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:lineSpacingExtra="4dp"
                        android:text="7:00 PM"
                        android:textColor="#9A9A9A"
                        android:textSize="13sp" />
                    <TextView
                        android:id="@+id/tvprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:text="Rs:200"
                        android:textColor="#9A9A9A"
                        android:textSize="13sp" />








                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/dham"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="10dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/booksnew"
                android:elevation="15dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout">


                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="150dp"
                    android:layout_height="110dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:scaleType="fitXY" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="20dp"
                        android:text="Total Dhamaal"
                        android:textColor="#2E3691"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="230dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="8dp"
                        android:lineSpacingExtra="4dp"
                        android:text="Carnival : Bhandup"
                        android:textColor="@color/orange"
                        android:textStyle="italic"
                        android:textSize="13sp" />
                    <TextView
                        android:layout_width="230dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:lineSpacingExtra="4dp"
                        android:text="5:00 PM"
                        android:textColor="#9A9A9A"
                        android:textSize="13sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:text="Rs 50 "
                        android:textColor="#9A9A9A"
                        android:textSize="13sp" />




                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/movie1"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginEnd="24dp"
                android:layout_margin="10dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/booksnew"
                android:elevation="15dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout">


                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="150dp"
                    android:layout_height="110dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="20dp"
                    android:scaleType="fitXY" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="20dp"
                        android:text="Anandi Gopal"
                        android:textColor="#2E3691"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="230dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="8dp"
                        android:lineSpacingExtra="4dp"
                        android:text="Inox ; Dadar"
                        android:textColor="@color/orange"
                        android:textStyle="italic"
                        android:textSize="13sp" />
                    <TextView
                        android:layout_width="230dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:lineSpacingExtra="4dp"
                        android:text="8:00 PM"
                        android:textColor="#9A9A9A"
                        android:textSize="13sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:text="Rs : 100"
                        android:textColor="#9A9A9A"
                        android:textSize="13sp" />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/movie2"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginEnd="24dp"
                android:layout_margin="10dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/booksnew"
                android:elevation="15dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout">


                <ImageView
                    android:id="@+id/image3"
                    android:layout_width="150dp"
                    android:layout_height="110dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="20dp"
                    android:scaleType="fitXY"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="20dp"
                        android:text="Golmaal 3"
                        android:textColor="#2E3691"
                        android:textSize="18sp" />
                    <TextView
                        android:layout_width="230dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="8dp"
                        android:lineSpacingExtra="4dp"
                        android:text="Cinepolis : Mulund"
                        android:textColor="@color/orange"
                        android:textStyle="italic"
                        android:textSize="13sp" />
                    <TextView
                        android:layout_width="230dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:lineSpacingExtra="4dp"
                        android:text="4:00 PM"
                        android:textColor="#9A9A9A"
                        android:textSize="13sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:text="Rs 200"
                        android:textColor="#9A9A9A"
                        android:textSize="13sp" />



                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>


    <android.support.design.widget.BottomNavigationView
        android:id="@+id/main_nav"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:menu="@menu/navigation" />

</RelativeLayout>